@model PersonelTakipOtomasyonu.Models.Entity.PersonalAction

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<br />

<h4>Aksiyon Düzenleme Sayfası</h4>
<hr />
<div class="row">
    <div class="col-11 container-fluid">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonalActionId" />
            <div class="form-group">
                <label asp-for="ActionTime" class="control-label"> Başlangıç Tarihi</label>
                <input asp-for="ActionTime" class="form-control" />
                <span asp-validation-for="ActionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionTypeId" class="control-label"> Aksiyon Seçiniz</label>
                <select asp-for="ActionTypeId" class="form-control" asp-items="ViewBag.list1"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> Açıklama</label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"> Kullanıcı Seçiniz</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.list"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="float-left">
                    <a class="btn btn-dark" asp-action="Index"><i class="fas fa-arrow-left"></i> Listeye Geri Dön</a>
                </div>
                <div class="float-right">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

