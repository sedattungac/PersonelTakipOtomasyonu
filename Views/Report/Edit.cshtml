@model PersonelTakipOtomasyonu.Models.Entity.Report

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<br />
<h4>Rapor Düzenleme Sayfası</h4>
<hr />
<div class="row">
    <div class="container-fluid col-11">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReportId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Rapor Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportFile" class="control-label"> Dosya Yükleyiniz</label>
                <input type="file" asp-for="ReportFile" class="form-control" />
                <span asp-validation-for="ReportFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"> Kullanıcı</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.list"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="float-left">
                    <a class="btn btn-dark" asp-action="Index"><i class="fas fa-arrow-left"></i> Listeye Geri Dön</a>
                </div>
                <div class="float-right">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>



