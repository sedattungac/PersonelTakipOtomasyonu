@using PersonelTakipOtomasyonu.Models.Entity
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{int sira = 1;}
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Personel Listesi</h3>
        <a href="/User/Create" class="btn btn-primary btn-sm float-right">Personel Ekle</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Departman</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userList in Model)
                {
                    <tr>
                        <td>@sira</td>
                        <td>@userList.FullName</td>
                        <td>@userList.Email</td>
                        <td>@userList.Telephone</td>
                        <td>@userList.Department.Name</td>
                        <td>
                            <div class="dropdown ">
                                <a class="btn btn-warning dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/User/Details/@userList.UserId"><i class="fas fa-eye"></i> Detay</a>
                                    <a class="dropdown-item" href="/User/UserReport/@userList.UserId"><i class="fas fa-file"></i> Raporlar</a>
                                    <a class="dropdown-item" href="/User/Edit/@userList.UserId"><i class="fas fa-cog"></i> Düzenle</a>
                                    <a class="dropdown-item" href="/User/Delete/@userList.UserId" id="DeleteBtn" 
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fas fa-trash"></i> Sil</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                    sira++;
                }

            </tbody>
        </table>
        
    </div>
    <!-- /.card-body -->
</div>

