@using PersonelTakipOtomasyonu.Models.Entity
@model List<Department>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@{int sira = 1;}
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Listesi</h3>
        <a href="/Department/Create" class="btn btn-primary btn-sm float-right">Departman Ekle</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Departman Ad</th>
                    <th>Açıklama</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var departmentList in Model)
                {
                    <tr>
                        <td>@sira</td>
                        <td>@departmentList.Name</td>
                        <td>@departmentList.Description</td>
                        <td>
                            <div class="dropdown-left ">
                                <a class="btn btn-warning dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </a>

                                <div class="dropdown-menu " aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/Department/DepartmentUser/@departmentList.DepartmentId"><i class="fas fa-list"></i> Personel Listesi</a>
                                    <a class="dropdown-item" href="/Department/Edit/@departmentList.DepartmentId"><i class="fas fa-cog"></i> Düzenle</a>
                                    <a class="dropdown-item" href="/Department/Delete/@departmentList.DepartmentId" id="DeleteBtn" 
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fas fa-trash"></i> Sil</a>
                                </div>
                            </div>

                        </td>

                    </tr>
                    sira++;
                }

            </tbody>
        </table>

    </div>
    <!-- /.card-body -->
</div>



