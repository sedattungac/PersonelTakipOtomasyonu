@model PersonelTakipOtomasyonu.Models.Entity.Department

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<br />
<h4>Departman Ekleme Sayfası</h4>
<hr />
<div class="row">
    <div class="container-fluid col-11">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Departman Adı</label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> Açıklama</label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="float-left">
                    <a class="btn btn-dark" asp-action="Index"><i class="fas fa-arrow-left"></i> Listeye Geri Dön</a>
                </div>
                <div class="float-right">
                    <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>

                </div>
            </div>
        </form>
    </div>
</div>
<br />


